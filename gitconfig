[alias]
	l = log --graph --oneline --decorate --date=relative
	ci = commit -m
	cia = commit --amend
  cie = commit --amend --no-edit
	co = checkout
	st = status
	aa = add .
  pushtag = !git push origin $(git symbolic-ref HEAD) && git push origin $(git tag --points-at HEAD)
